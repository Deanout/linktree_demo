<turbo-frame id="link_active_toggle_<%= link.id %>">
  <%= simple_form_for link, 
    url: toggle_active_link_path(link), format: :turbo_stream do |f| %>
    <%= f.input :active, 
        as: :boolean, 
        inline_label: false, 
        label: false,
        # This polyfill allows you to use the onchange event with a turbo_stream.
        # See: https://stackoverflow.com/questions/68624668/how-can-i-submit-a-form-on-input-change-with-turbo-streams
        input_html: { onchange: "this.form.requestSubmit();" } %>
  <% end %>
</turbo-frame>
